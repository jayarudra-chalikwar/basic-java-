import java.util.*;
public class Main
{
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		System.out.println("Welcome to CMR restuarent");
		System.out.print("enter your name:");
		String name=sc.nextLine();
		System.out.print("hey "+name+" what do u like to have \n");
		System.out.println("1.Dal fry - 40");
		System.out.println("2.panner butter masala - 100");
		System.out.println("3.chicken curry - 120 ");
		System.out.println("4.fish fry - 100");
		System.out.println("5.tomato cuury - 30");
		System.out.print("select from the menu:");
		int item=sc.nextInt();
		System.out.print("enter quantity:");
		int quan=sc.nextInt();
		int cost;
		switch(item){
		    case 1:
		        cost=40*quan;
		        System.out.print("you selected dal fry pay"+cost);
		        break;
		    case 2:
		        cost=100*quan;
		        System.out.print("you selected panner butter masala pay"+cost);
		        break;
		    case 3:
		        cost=120*quan;
		        System.out.print("you selected chiken curry pay"+cost);
		        break;
		    case 4:
		        cost=100*quan;
		        System.out.print("you fish fry pay"+cost);
		        break;
		    case 5:
		        cost=30*quan;
		        System.out.print("you selected tomato curry pay"+cost);
		    default:
		        cost=0;
		        System.out.print("invalid input");
		        break;
		}
		System.out.println("");
		int bill=sc.nextInt();
		if(bill==cost){
		    System.out.println("order placed please kindly wait");
		}
		else{
		    System.out.println("invalid inout");
		}		
	}
}
